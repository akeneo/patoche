{
    "name": "akeneo/patrick-tag",
    "authors": [
        {
            "name": "Akeneo",
            "homepage": "http://www.akeneo.com"
        }
    ],
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "7.3.*",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-zip": "*",
        "knplabs/github-api": "^2.11",
        "oneup/flysystem-bundle": "^3.1",
        "php-http/guzzle6-adapter": "^1.1",
        "symfony/console": "4.2.*",
        "symfony/dotenv": "4.2.*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "4.2.*",
        "symfony/workflow": "4.2.*",
        "symfony/yaml": "4.2.*",
        "webmozart/assert": "^1.4"
    },
    "require-dev": {
        "friends-of-behat/symfony-extension": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.14",
        "league/flysystem-memory": "^1.0",
        "phpspec/phpspec": "^5.1",
        "phpstan/phpstan": "^0.11.5",
        "phpunit/phpunit": "^8.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Akeneo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Akeneo\\Tests\\Acceptance\\": "tests/acceptance",
            "Akeneo\\Tests\\Integration\\": "tests/integration"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "tests": [
            "@php-cs-fixer",
            "@phpstan",
            "@phpspec",
            "@acceptance",
            "@integration"
        ],
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix --dry-run -v --diff --config=.php_cs.php",
        "php-cs-fixer-fix": "vendor/bin/php-cs-fixer fix -v --diff --config=.php_cs.php",
        "phpstan": "vendor/bin/phpstan analyse src -l 7",
        "phpspec": "vendor/bin/phpspec run",
        "acceptance": "vendor/bin/behat -p acceptance -f pretty -o std --colors",
        "integration": "vendor/bin/phpunit"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.2.*"
        }
    }
}
